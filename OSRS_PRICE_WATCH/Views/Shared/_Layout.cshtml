<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" asp-href-include="/lib/bootstrap/css/**/*.min.css" />
    <link rel="stylesheet" asp-href-include="https://fonts.googleapis.com/css?family=Montserrat:400,700">
    <link rel="stylesheet" asp-href-include="https://fonts.googleapis.com/css?family=Lato:400,700,400italic,700italic">
    <link rel="stylesheet" asp-href-include="assets/fonts/font-awesome.min.css">
    <link rel="stylesheet" asp-href-include="assets/css/untitled.css">
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js" integrity="sha384-OgVRvuATP1z7JjHLkuOU7Xw704+h835Lr+6QL9UvYjZE3Ipu6Tp75j7Bh/kR0JKI" crossorigin="anonymous"></script>
    <link href="~/lib/CustomCss/override.css" rel="stylesheet" />
</head>
<body class="bg-light">
            <nav class="navbar navbar-dark navbar-expand-lg fixed-top bg-dark">
                <div class="container">
                    <a class="navbar-brand logo" href="/home/index">OSRS Price Watch</a><button data-toggle="collapse" data-target="#navcol-1" class="navbar-toggler"><span class="sr-only">Toggle navigation</span><span class="navbar-toggler-icon"></span></button>
                    <div class="collapse navbar-collapse"
                         id="navcol-1">
                        <ul class="nav navbar-nav ml-auto">
                            @if (User?.IsInRole("Admin") ?? false)
                            {
                            <li class="nav-item item"><a class="nav-link active" href="/admin/index">Users</a></li>
                            <li class="nav-item item"><a class="nav-link active" href="/roleadmin/index">Roles</a></li>
                            }
                            <li class="nav-item item"><a class="nav-link active" href="/home/stocks">Stocks</a></li>
                            @if (User?.Identity?.IsAuthenticated ?? false)
                            {
                            <li class="nav-item item"><a class="nav-link active" href="/favorites/myfavorites">Favorites</a></li>

                            }
                            else
                            {
                            <li class="nav-item item"><a class="nav-link" href="/favorites/myfavorites">Favorites</a></li>

                            }
                            <li class="nav-item item"><a class="nav-link active" href="/home/about">About</a></li>
                            @if (User?.Identity?.IsAuthenticated ?? false)
                            {
                            <li class="nav-item item"><a class="nav-link active" asp-controller="Account" asp-action="Logout">Logout</a></li>
                            }
                            else
                            {
                            <li class="nav-item item"><a class="nav-link active" href="/account/login">Login</a></li>
                            <li class="nav-item item"><a class="nav-link active" href="/account/signup">Sign Up</a></li>
                            }
                        </ul>
                    </div>
                </div>
            </nav>

    @RenderBody()
</body>
</html>
