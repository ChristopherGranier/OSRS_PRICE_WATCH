@model _Items[]


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>WeaponCategories</title>
</head>
<body>
    <br />
    <br />
    <br />
    <div class="container">
        <div class="row">
            <div class="col-sm-3">
                <div class="card">

                    <div class="card-body">
                        <h4 class="card-title">Filter by:</h4>
                        <a class="btn btn-outline-primary" href="" type="button">Name</a><br />
                        <a class="btn btn-outline-primary" href="" type="button">Price</a><br />
                        <a class="btn btn-outline-primary" href="" type="button">High Alch</a>
                    </div>
                </div>
            </div>
            <div class="col">
                <table class="table">
                    <thead class="thead-dark">
                        <tr>
                            <th scope="col">Item Name</th>
                            <th scope="col">Price</th>
                            <th scope="col">High Alch</th>
                            <th scope="col">Low Alch</th>
                            <th scope="col">Wiki Link</th>
                            <th scope="col"></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.wiki_name</td>
                                <td>@item.cost</td>
                                <td>@item.highalch</td>
                                <td>@item.lowalch</td>
                                <td><a class="btn btn-outline-primary" href="@item.wiki_url">Wiki</a></td>
                                <td><a class="btn btn-primary text-white" href="/Items/SingleItem?Name=@item.wiki_name">View More</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

        </div>
    </div>
    <div class="text-center"><a class="btn btn-primary text-white justify-content-center" href="/home/stocks">Back to Categories</a></div>


</body>
</html>