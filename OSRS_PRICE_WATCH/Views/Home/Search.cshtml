@model RootobjectOsrsGe


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Search</title>
</head>
<body>
    <br />
    <br />
    <br />
    <div class="container">
        <div class="row">
            <div class="col-md">
                <br />
                <div class="card clean-card text-center">
                    <div class="card-body bg-secondary">
                        <h4 class="card-title">@Model.item.name</h4>
                    </div>
                </div>
            </div>
            <div class="col-md">
                <form asp-action="Search" method="post">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group text-center">
                        <label>Search for an item:</label><input asp-for="item.name" class="form-control" />
                    </div>
                    <div class="text-center">
                        <input class="btn btn-primary" type="submit" value="Submit" placeholder="Type here" />
                    </div>
                </form>
            </div>
        </div>
    </div>
    <h3>@Model.item.name</h3>
    <p>Price: @Model.item.current.price</p>
</body>
</html>
